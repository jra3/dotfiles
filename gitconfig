[color]
  diff = auto
  status = auto
  branch = auto

[alias]
  br = branch
  co = checkout
  di = diff
  st = status
  lo = log
  pi = cherry-pick
  wm = !git commit --amend -eF $(git config commit.template)
  glom = !git commit -a --amend -C HEAD
  purge = !git branch --merged master | grep -v "master" | xargs -n 1 git branch -d
  webui = !/home/john/.git-webui/release/libexec/git-core/git-webui
  g = grep --break --heading --line-number
  smartlog = log --graph --pretty=format:'commit: %C(bold red)%h%Creset %C(red)<%H>%Creset %C(bold magenta)%d %Creset%ndate: %C(bold yellow)%cd %Creset%C(yellow)%cr%Creset%nauthor: %C(bold blue)%an%Creset %C(blue)<%ae>%Creset%n%C(cyan)%s%n%Creset'
  sl = !git smartlog
  pd = !git commit -a -m 'push detritus'

[svn]
  followparent = true

[user]
  name = John Allen
  email = jallen@dynoprojects.com

[log]
  date = local

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  plain = white
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red blink

[color "status"]
  added = green
  changed = yellow
  untracked = red

[difftool]
  prompt = false

[merge]
  tool = ediff

[mergetool "ediff"]
  cmd = emacsclient -c -a \"\"  --eval \"(ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\")\"

[push]
  default = current

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f

[branch]
  autosetuprebase = never

[help]
  autocorrect = 1

[webui]
  autoupdate = false
  port = 9999

[core]
  excludesfile = /Users/jra3/.gitignore_global
[grep]
  extendRegexp = true
  lineNumber = true
[pull]
  rebase = true
