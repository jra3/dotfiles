[user]
  name = John Allen
  email = jallen@braid.ai

[alias]
  pi = cherry-pick
  br = branch
  co = checkout
  di = diff
  dm = !git diff main..HEAD
  st = status
  lo = log
  wm = !git commit --amend -eF $(git config commit.template)
  glom = !git commit -a --amend -C HEAD
  purge = !git branch --merged main | grep -v "main" | xargs -n 1 git branch -d
  g = grep --break --heading --line-number
  smartlog = log --graph --pretty=format:'commit: %C(bold red)%h%Creset %C(red)<%H>%Creset %C(bold magenta)%d %Creset%ndate: %C(bold yellow)%cd %Creset%C(yellow)%cr%Creset%nauthor: %C(bold blue)%an%Creset %C(blue)<%ae>%Creset%n%C(cyan)%s%n%Creset'
  sl = smartlog
  up = !git fetch origin main:main
  publish = !git push origin HEAD:main

[color]
  diff = auto
  status = auto
  branch = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  plain = white
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red blink

[color "status"]
  added = green
  changed = yellow
  untracked = red

[diff]
  tool = vscode

[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE

[fetch]
  prune = true

[merge]
  tool = vscode

[mergetool "vscode"]
  cmd = code --wait $MERGED

[log]
  date = local

[difftool]
  prompt = false

[push]
	default = current

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f

[branch]
  autosetuprebase = never
  autosetupmerge = always
	sort = -committerdate

[help]
  autocorrect = 1

[core]
  excludesfile = /Users/jra3/.gitignore_global
	editor = code --wait
[grep]
  extendRegexp = true
  lineNumber = true

[pull]
  rebase = false

[column]
	ui = auto

[maintenance]
	repo = /Users/jallen/braid

[rerere]
	enabled = true
	autoUpdate = true
